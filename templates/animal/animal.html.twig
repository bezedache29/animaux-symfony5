{% extends 'template.html.twig' %}

{% block title %}Détails de {{ animal.nom }}{% endblock %}

{% block monTitre %}Détails de {{ animal.nom }}{% endblock %}

{% block content %}

    <div class="row gx-0 mt-4 align-items-center">
        <div class="col-6 text-center">
            <img src="{{ asset('images/' ~ animal.image) }}" alt="Image {{ animal.nom }}">
        </div>
        <div class="col-3">
            <div class="list-group">
                <p>Nom : {{ animal.nom }}</p>
                <p>Description : {{ animal.description }}</p>
                <p>Poids : {{ animal.poids }} kg</p>
                {% if (animal.dangereux) %}
                    <p>Dangeureux : <span class="badge rounded-pill bg-danger">Oui</span></p>
                {% else %}
                    <p>Dangeureux : <span class="badge rounded-pill bg-success">Non</span></p>
                {% endif %}
                <div>
                    <a href="{{ path('famille', {id: animal.famille.id}) }}" class="btn btn-primary">{{ animal.famille.libelle }}</a>
                </div>
                <h5 class="my-2">Présence de l'animal sur les continents :</h5>
                <div>
                    {% for continent in animal.continents %}
                        <a href="{{ path('continent', {id: continent.id}) }}" class="btn btn-warning mb-1">{{ continent.libelle }}</a>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
