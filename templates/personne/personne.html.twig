{% extends 'template.html.twig' %}

{% block title %}Détails de {{ personne.nom }}{% endblock %}

{% block monTitre %}Détails de {{ personne.nom }}{% endblock %}

{% block content %}

    <h2 class="text-center my-3">Liste des animaux possédés :</h2>

    <div class="row justify-content-center gx-0">

        {% for dispose in personne.disposes %}
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card text-white bg-primary m-2">
                <h3 class="card-header text-center"><a href="{{ path('animal', {id: dispose.animal.id}) }}" style="text-decoration: none;">{{ dispose.animal.nom}}</a></h3>
                <div class="card-body text-center">
                    <img style="height: 150px;" class="img-fluid" src="{{ asset('images/' ~ dispose.animal.image) }}" alt="image {{ dispose.animal.nom }}">
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-center">Nombre : {{ dispose.nb }}</li>
                </ul>
            </div>
        </div>
        {% endfor %}

    </div>

{% endblock %}
