{% extends 'template.html.twig' %}

{% block title %}Liste des personnes{% endblock %}

{% block monTitre %}Liste des personnes{% endblock %}

{% block content %}

    <div class="container mt-5">

        {% for personne in personnes %}
            <h2 class="border-bottom border-primary mt-5"><a style="text-decoration:none;" href="{{ path('personne', {id: personne.id}) }}">{{ personne.nom }}</a></h2>

            <div class="row gx-0 align-items-center">
                {% for dispose in personne.disposes %}
                    <div class="col-6 my-3">
                        <div class="row align-items-center">
                            <div class="col-12 col-md-6 col-lg-2 text-center">
                                <img src="{{ asset('images/' ~ dispose.animal.image) }}" alt="image {{ dispose.animal.nom }}">
                            </div>
                        </div>
                    </div>
                    <div class="col-6  my-3">
                        <div class="list-group">
                            <h2 class="m-0"><a href="{{ path('animal', {id: dispose.animal.id}) }}">{{ dispose.animal.nom }}</a></h2>
                            <p class="my-2">Nombre : {{ dispose.nb }}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endfor %}

    </div>

{% endblock %}
