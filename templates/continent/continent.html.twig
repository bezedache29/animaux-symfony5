{% extends 'template.html.twig' %}

{% block title %}Détails de {{ continent.libelle }}{% endblock %}

{% block monTitre %}Détails de {{ continent.libelle }}{% endblock %}

{% block content %}

        <div class="container mt-5">
            <div class="row gx-0 align-items-center">
                {% for animal in continent.animaux %}
                    <div class="col-6 my-3">
                        <div class="row align-items-center">
                            <div class="col-12 col-md-6 col-lg-2 text-center">
                                <img src="{{ asset('images/' ~ animal.image) }}" alt="image {{ animal.nom }}">
                            </div>
                        </div>
                    </div>
                    <div class="col-6  my-3">
                        <div class="list-group">
                            <h2 class="m-0"><a href="{{ path('animal', {id: animal.id}) }}">{{ animal.nom }}</a></h2>
                            <p class="m-0">Description : {{ animal.description }}</p>
                            <div>
                                <a href="{{ path('famille', {id: animal.famille.id}) }}" class="btn btn-primary">{{ animal.famille.libelle }}</a>
                            </div>
                            <h5 class="my-2 mt-3">Présence de l'animal sur les continents :</h5>
                            <div>
                                {% for c in animal.continents %}
                                    {% if (c.id != continent.id) %}
                                        <a href="{{ path('continent', {id: c.id}) }}" class="btn btn-warning">{{ c.libelle }}</a>
                                    {% endif %}
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>

{% endblock %}
